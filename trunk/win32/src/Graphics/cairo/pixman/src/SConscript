Import( "env" )

import glob


# ----------------------------------------------------------------------------
# Build Actions
# ----------------------------------------------------------------------------

sourceList = [
    glob.glob( "*.c" )
    ]

env.StaticLibrary(
    target = "${PIXMAN_LIB_NAME}",
    source = sourceList,
    )
